{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "eslite"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "eslite",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "lite"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["lite-env.d.ts", "**/*.ts", "**/*.tsx", ".lite/types/**/*.ts", "app/calcTextareaHeight.ts"],
  "exclude": ["node_modules"]
}
